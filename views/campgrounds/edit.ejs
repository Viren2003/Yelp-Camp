<%layout('layout/boilerplate')%>

    <div class="row">
        <h1 class="text-center col-12">Edit Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campground/<%=campground._id%>?_method=PUT" method="POST" novalidate class="validated-form"
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="campground[title]"
                        value="<%= campground.title %>" required>
                    <div class="valid-feedback">
                        Verified !
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="campground[location]"
                        value="<%= campground.location %>" required>
                    <div class="valid-feedback">
                        Verified !!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Campground Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00"
                            aria-describedby="price-label" name="campground[price]" value="<%= campground.price %>"
                            required>
                        <div class="valid-feedback">
                            Verified !
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="campground[description]"
                        required><%= campground.description %></textarea>
                    <div class="valid-feedback">
                        Verified !
                    </div>
                </div>

                <div class="input-group">
                    <div class="form-file custom-file">
                        <input type="file" class="form-file-text custom-file-input" id="image" name="image"
                            aria-describedby="inputGroupFileAddon01" multiple>
                        <label class="custom-file-label" for="image">Upload New Photos</label>
                    </div>
                </div>
                <!-- For Delete Imgs -->
                <div class="mb-3">
                    <% campground.images.forEach(function(image,i) { %>
                        <!-- Virtual property to show the img on img schema -->
                        <img src="<%=image.thumbnail%>" class="img-thumbnail" alt="<%=image.filename%>">
                        <div class="form-check-inline ">
                            <input type="checkbox" id='image-<%=i%>' name="deleteImages[]" value="<%=image.filename%>">
                        </div>
                        <label class="form-check-label" for='image-<%=i%>'>Delete ?</label>
                        <% }); %>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update Campground</button>
                </div>
            </form>
            <div>
                <a href="/campground/<%=campground._id%>">Back to Campgrounds</a>
            </div>
        </div>
    </div>